{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "client/build"
  ],
  "include": [
    "client/**/*"
  ],
  "types": [
    "socket.io-client"
  ]
}